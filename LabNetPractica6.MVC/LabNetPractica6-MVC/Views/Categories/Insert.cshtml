@model LabNetPractica6_MVC.Models.CategoryView
@{
    ViewBag.Title = "Agregar una categoría";
}
<div class="container">
    <h1>@ViewBag.Title</h1>

    @using (Html.BeginForm("Insert", "Categories", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group my-3">
            @Html.LabelFor(c => c.CategoryName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(c => c.CategoryName, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group my-3">
            @Html.LabelFor(c => c.Description, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(c => c.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group my-3">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Volver a Categorias", "Index")
    </div>

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

